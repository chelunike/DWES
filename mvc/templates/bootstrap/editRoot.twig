{% extends 'bootstrap.twig' %}

{% block nav_items %}
<li class="nav-item">
    <a class="nav-link" href="index.php">Usuario</a>
</li>
<li class="nav-item">
    <a class="nav-link disabled" href="edit.php">Configuracion</a>
</li>
