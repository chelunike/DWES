{% block contenido_principal %}
<div class="<form-group></form-group>">
    <h3>Configuracion Basica</h3>
	<div class="form-group">
		<form action="doeditSelf.php" method="post">
            <input type="hidden" name="id" id="id" class="form-control" value="{{ usuario.id }}"/>
            <div class="form-group">
                <label for="alias">Alias</label>
                <input type="text" name="alias" id="alias" class="form-control" placeholder="Enter alias"  value="{{ usuario.alias }}" required/>
                <small id="alias" class="form-text text-muted">Un alias bonito</small>
            </div>
            <div class="form-group">
                <label for="nombre">Nombre</label>
                <input type="text" name="nombre" id="nombre" class="form-control" placeholder="Enter nombre"  value="{{ usuario.nombre }}" required/>
                <small id="nombre" class="form-text text-muted">Un nombre mas bonito aun</small>
            </div>
          <button type="submit" class="btn btn-primary">Editar</button>
        </form>
	</div>
	<h3>Cambiar de correo</h3>
	<div class="form-group">
		<form action="doeditSelf.php" method="post">
            <input type="hidden" name="id" id="id" class="form-control" value="{{ usuario.id }}"/>
            <div class="form-group">
                <label for="correo">Correo</label>
                <input type="text" name="correo" id="correo" class="form-control" placeholder="Enter correo" value="{{ usuario.correo }}" required/>
                <small id="correo" class="form-text text-muted">Al cambiar de correro tendra que volver a activar la cuenta</small>
            </div>
            <button type="submit" class="btn btn-warning">Cambiar Correo</button>
        </form>
	</div>
	<h3>Cambiar clave</h3>
	<div class="form-group">
		<form action="doeditSelf.php" method="post">
		    <input type="hidden" name="id" id="id" class="form-control" value="{{ usuario.id }}"/>
            <div class="form-group">
				<label for="clave">Clave Actual</label>
				<input type="password" name="clave" id="clave" class="form-control" placeholder="Enter clave" required>
				<small id="alias" class="form-text text-muted">La clave que tienes</small>
			</div>
            <div class="form-group">
				<label for="clave">Clave</label>
				<input type="password" name="claveNueva" id="clave" class="form-control" placeholder="Enter nueva clave" required>
				<small id="alias" class="form-text text-muted">Una nueva clave difisil :)</small>
			</div>
			<div class="form-group">
				<label for="clave">Verificaci√≥n clave</label>
				<input type="password" name="claveNueva2" id="clave2" class="form-control" placeholder="Repita clave" required>
				<small id="alias" class="form-text text-muted">Una clave igual que la anterior :)</small>
			</div>
          <button type="submit" class="btn btn-danger">Editar</button>
        </form>
	</div>
	<h3>Configuracion de baja</h3>
	<div class="form-group">
		<form action="doeditSelf.php" method="post">
		    <input type="hidden" name="id" id="id" class="form-control" value="{{ usuario.id }}"/>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="bajaTmp" id="bajaTmp" value="1" checked>
                <label class="form-check-label" for="bajaTmp">Baja temporal</label>
                <small id="alias" class="form-text text-muted">Debera contactar con un administrador para recuperar la cuenta</small>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="bajaTmp" id="bajaTmp2" value="0">
                <label class="form-check-label" for="bajaTmp2">Baja definitiva</label>
                <small id="alias" class="form-text text-muted">Eliminacion total de la cuenta y no se podra recuperar</small>
            </div>
            <button type="submit" class="btn btn-danger">Darse de Baja</button>
        </form>
	</div>
</div>
{% endblock %}